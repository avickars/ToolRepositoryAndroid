<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".Profile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/FirstNameTextViewProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="56dp"
                android:layout_marginTop="40dp"
                android:text="First Name"
                android:textColor="#03A9F4" />

            <EditText
                android:id="@+id/firstNameProfile"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:enabled="false"
                android:inputType="textPersonName"
                android:text="Name"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/LastNameTextViewProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="56dp"
                android:layout_marginTop="20dp"
                android:text="Last Name"
                android:textColor="#03A9F4" />

            <EditText
                android:id="@+id/lastNameProfile"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:enabled="false"
                android:inputType="textPersonName"
                android:text="Name"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/emailTextViewProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="56dp"
                android:layout_marginTop="20dp"
                android:text="Email"
                android:textColor="#03A9F4" />


            <EditText
                android:id="@+id/emailProfile"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:enabled="false"
                android:inputType="textPersonName"
                android:text="Name"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/passwordTextViewProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="56dp"
                android:layout_marginTop="20dp"
                android:text="Password"
                android:textColor="#03A9F4" />

            <EditText
                android:id="@+id/passwordProfile"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:enabled="false"
                android:inputType="textPassword"
                android:text="fdsafsdafsda"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/confirmPasswordTextViewProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="56dp"
                android:layout_marginTop="20dp"
                android:alpha="0"
                android:text="Confirm Password"
                android:textColor="#03A9F4" />

            <EditText
                android:id="@+id/confirmPassWordProfile"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:alpha="0"
                android:ems="10"
                android:enabled="false"
                android:inputType="textPassword"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/updateProfileButton"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:background="@drawable/btn_rounded"
                android:onClick="updateProfileClick"
                android:text="Update Profile"
                android:textColor="#03A9F4"
                android:textStyle="bold" />

            <Button
                android:id="@+id/logoutProfileButton"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/btn_rounded_blue"
                android:onClick="logoutClick"
                android:text="Logout"
                android:textColor="#03A9F4"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>